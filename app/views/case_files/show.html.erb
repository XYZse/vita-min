<% content_for :page_title, "#{@case_file.preferred_name}, ##{@case_file.id}" %>

<% content_for :card do %>
  <div class="header">
    <h1 class="h2">
      <%= @case_file.preferred_name %>
    </h1>
    <h2>#<%= @case_file.id %></h2>
    <h3>Email: <%= @case_file.email_address %></h3>
    <h3>Phone: <%= @case_file.phone_number %></h3>
    <h3>Phone for texting: <%= @case_file.sms_phone_number %></h3>
  </div>
<% end %>
