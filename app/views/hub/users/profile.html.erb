<% content_for :page_title, current_user.name %>
<% content_for :card do %>
  <h1><%= current_user.name %></h1>
  <p>
    <strong><%= t("general.email") %></strong> <%= current_user.email %>
  </p>

  <% if current_user.is_admin?  %>
    <p>
      <strong><%= t("general.role") %></strong> <%= t("general.admin") %>
    </p>
  <% else %>
    <p>
      <strong><%= t("general.organization") %></strong>
      <br />
      <%=  t("general.none") unless current_user.memberships.present? %>
      <ul>
        <% current_user.memberships.each do |membership| %>
          <li><%= membership.vita_partner.name %>: <%= membership.role&.capitalize %></li>
        <% end %>
      <ul>
    </p>
  <% end %>

  <ul class="actions">
    <li class="user-action-link">
      <%= link_to invitations_path, class: "button button--small" do %>
        <%= t("general.invitations") %>
      <% end %>
    </li>

    <li class="user-action-link">
      <%= link_to hub_clients_path, class: "button button--small" do %>
        <%= t(".clients_link") %>
      <% end %>
    </li>

    <li class="user-action-link">
      <%= link_to hub_users_path, class: "button button--small" do %>
        <%= t(".users_link") %>
      <% end %>
    </li>

    <li class="user-action-link">
      <%= link_to hub_vita_partners_path, class: "button button--small" do %>
        <%= t(".vita_partners_link") %>
      <% end %>
    </li>
  </ul>
<% end %>