<% content_for :page_title, t("views.questions.welcome.title") %>

<% content_for :main do %>
  <section class="slab slab--white welcome">
    <div class="grid">
      <div class="grid__item width-three-fourths shift-one-eighth">
        <main role="main">
          <div class="question__illustration">
            <%= image_tag "questions/welcome.svg"%>
          </div>

          <h1 class="form-question">
            <%= content_for(:page_title) %>
          </h1>

          <p class="text--help">
            <%= t("views.questions.welcome.help_text") %>
          </p>

          <%= link_to "Continue", next_path, class: "button button--primary button--wide text--centered" %>
        </main>
      </div>
    </div>
  </section>
<% end %>
